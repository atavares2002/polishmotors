const canonicalURL = new URL(Astro.url.pathname, Astro.site);
interface Props {
  title: string;
  description?: string;
  canonical?: string; // Optional prop for overriding the canonical URL
}

const { title, description, canonical } = Astro.props;
const finalCanonicalUrl = canonical || canonicalURL.href;


