    image: "/images/equipment-1.png",
    marca:"Bráz Acessórios",
    alt: "Cavalete Central Honda CB 500X",
  },
  {
    id: 2,
    name: "Bauletos Laterais Adventure 35/40L Preto",
    quantity: "3 unidades",
    image: "/images/equipment-2.png",
    marca:"Bráz Acessórios",
    alt: "Bauletos Laterais Adventure 35/40L Preto",
  },
  {
    id: 3,
    name: "Bauletos Laterais Adventure 35/40L Escovado",
    quantity: "4 unidades",
    image: "/images/equipment-3.png",
    marca:"Bráz Acessórios",
    alt: "Bauletos Laterais Adventure 35/40L Escovado",
  },
  {
    id: 4,
    name: "Bagageiro para Baú Monokey Triumph Tiger 900",
